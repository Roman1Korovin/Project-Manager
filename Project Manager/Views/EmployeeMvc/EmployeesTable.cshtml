@using Project_Manager.DTOs
@model List<EmployeeDTO>



<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>
                <a href="#" class="sort-link" data-column="FullName" data-direction="@ViewData["SortDirection"]"> 
                    @(ViewData["SortColumn"]?.ToString() == "FullName" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    ФИО 
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="Email" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "Email" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Email
                </a>
            </th>
            <th>Проекты</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var employee in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td class="text-center">
                        <a asp-action="IndexEmployeeProjects" asp-route-employeeId="@employee.Id" title="Проекты сотрудника">
                            <i class="bi bi-folder-fill"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@employee.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Вы уверены, что хотите удалить сотрудника <<@employee.FullName>> ?');">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Сотрудников пока нет</td>
            </tr>
        }
    </tbody>
</table>