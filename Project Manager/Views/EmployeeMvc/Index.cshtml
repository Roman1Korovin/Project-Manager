@using Project_Manager.DTOs
@model List<EmployeeDTO>

@{
    ViewData["Title"] = "Список сотрудников";
}

<h2>Список Сотрудников</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Добавить сотрудника</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>

            <th>ФИО</th>
            <th>Email</th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                        <tr>
                            <td>@project.FullName</td>
                            <td>@project.Email</td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Редактировать</a>
                                <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Удалить</a>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="6" class="text-center">Сотрудников пока нет</td>
                </tr>
        }
    </tbody>
</table>
