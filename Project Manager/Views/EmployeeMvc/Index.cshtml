@using Project_Manager.DTOs
@model List<EmployeeDTO>

@{
    ViewData["Title"] = "Список сотрудников";
}

<h2>Список сотрудников</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить сотрудника</a>
</p>

<div style="max-height: 500px; overflow-y: auto;">
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>ФИО</th>
            <th>Email</th>
            <th>Проекты</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var employee in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td class="text-center">
                        <a asp-action="IndexEmployeeProjects" asp-route-employeeId="@employee.Id" title="Проекты сотрудника">
                            <i class="bi bi-folder-fill"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@employee.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Вы уверены, что хотите удалить сотрудника <<@employee.FullName>> ?');">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Сотрудников пока нет</td>
            </tr>
        }
    </tbody>
</table>
</div>