@using Project_Manager.DTOs
@model ProjectWizardDTO

@{
    ViewData["Title"] = "Создание проекта - Шаг 3";
}

<h2>Создание проекта - Шаг 3/5</h2>

<form asp-action="CreateStep3" method="post">
    @Html.AntiForgeryToken()

    @* Hidden fields for data from previous steps *@
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />
    <input type="hidden" asp-for="Priority" />
    <input type="hidden" asp-for="CustomerCompanyID" />
    <input type="hidden" asp-for="ExecutorCompanyID" />

    <div class="mb-3">
        <label asp-for="ManagerID" class="form-label">Руководитель проекта</label>
        <select asp-for="ManagerID" class="form-select" asp-items="ViewBag.Employees" required>
            <option value="">-- Выберите сотрудника --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Далее</button>
    <a asp-action="CreateStep2" class="btn btn-secondary">Назад</a>
</form>