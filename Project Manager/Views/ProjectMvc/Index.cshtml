@using Project_Manager.DTOs
@model List<ProjectDTO>

@{
    ViewData["Title"] = "Список проектов";
}

<h2>Список проектов</h2>

<p>
    <a asp-action="StartWizard" class="btn btn-primary">Добавить проект</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Приоритет</th>
            <th>Заказчик</th>
            <th>Исполнитель</th>
            <th>Менеджер</th>
            <th>Сотрудники</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var project in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@project.Name</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate.ToShortDateString()</td>
                    <td>@project.Priority</td>
                    <td>@project.CustomerName</td>
                    <td>@project.ExecutorName</td>
                    <td>@project.ManagerName</td>
                    <td class="text-center">
                        <a asp-action="EmployeesOnProject" asp-route-projectId="@project.Id" title="Сотрудники проекта">
                            <i class="bi bi-people-fill"></i> 
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@project.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Вы уверены, что хотите удалить сотрудника <<@project.Name>> ?');">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Проектов пока нет</td>
            </tr>
        }
    </tbody>
</table>
