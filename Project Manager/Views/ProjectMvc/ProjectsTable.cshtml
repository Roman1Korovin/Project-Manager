@using Project_Manager.DTOs
@model List<ProjectDTO>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>
                <a href="#" class="sort-link" data-column="Name" data-direction="@ViewData["SortDirection"]"> 
                    @(ViewData["SortColumn"]?.ToString() == "Name" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Название 
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="StartDate" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "StartDate" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Дата начала
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="EndDate" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "EndDate" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Дата окончания
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="Priority" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "Priority" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Приоритет
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="CustomerName" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "CustomerName" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Заказчик
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="ExecutorName" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "ExecutorName" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Исполнитель
                </a>
            </th>
            <th>
                <a href="#" class="sort-link" data-column="ManagerName" data-direction="@ViewData["SortDirection"]">
                    @(ViewData["SortColumn"]?.ToString() == "ManagerName" ? ViewData["SortDirection"]?.ToString() == "asc" ? "↑ " : "↓ " : "")
                    Руководитель
                </a>
            </th>
            <th>Сотрудники</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var project in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@project.Name</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate.ToShortDateString()</td>
                    <td>@project.Priority</td>
                    <td>@project.CustomerName</td>
                    <td>@project.ExecutorName</td>
                    <td>@project.ManagerName</td>
                    <td class="text-center">
                        <a asp-action="IndexProjectEmployees" asp-route-projectId="@project.Id" title="Сотрудники проекта">
                            <i class="bi bi-people-fill"></i> 
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@project.Id" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Вы уверены, что хотите удалить сотрудника <<@project.Name>> ?');">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Проектов пока нет</td>
            </tr>
        }
    </tbody>
</table>