@using Project_Manager.DTOs
@model List<ProjectDTO>

@{
    ViewData["Title"] = "Список проектов";
}

<h2>Список проектов</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Добавить проект</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Приоритет</th>
            <th>Заказчик</th>
            <th>Исполнитель</th>
            <th>Менеджер</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.EndDate.ToShortDateString()</td>
                    <td>@project.Priority</td>
                    <td>@project.CustomerName</td>
                    <td>@project.ExecutorName</td>
                    <td>@project.ManagerName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Проектов пока нет</td>
            </tr>
        }
    </tbody>
</table>
